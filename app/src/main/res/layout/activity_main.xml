<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sunxinyang.betaclock.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:layout_centerHorizontal="true"
        android:text="双方辩题及队名"
        android:id="@+id/textView" />

    <TextView
        android:text="正方辩题"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:textAppearance="@android:style/TextAppearance.Material.Small"
        android:id="@+id/positiveTitle"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="正方队名"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/negativeTitle"
        android:textAppearance="@android:style/TextAppearance.Material.Small"
        android:layout_alignStart="@+id/negativeTitle"
        android:layout_marginTop="40dp"
        android:id="@+id/positiveName" />

    <TextView
        android:text="反方辩题"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textAppearance="@android:style/TextAppearance.Material.Small"
        android:id="@+id/negativeTitle"
        android:layout_below="@+id/positiveTitle"
        android:layout_alignStart="@+id/positiveTitle" />

    <TextView
        android:text="反方队名"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/positiveName"
        android:layout_alignStart="@+id/positiveName"
        android:textAppearance="@android:style/TextAppearance.Material.Small"
        android:layout_marginTop="40dp"
        android:id="@+id/negativeName" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="请输入正方辩题"
        android:textAppearance="@android:style/TextAppearance.Material.Small"
        android:minEms="10"
        android:id="@+id/positiveTitleEdit"
        android:layout_alignBaseline="@+id/positiveTitle"
        android:layout_alignBottom="@+id/positiveTitle"
        android:layout_marginLeft="130dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="请输入反方辩题"
        android:textAppearance="@android:style/TextAppearance.Material.Small"
        android:minEms="10"
        android:layout_alignBottom="@+id/negativeTitle"
        android:layout_alignStart="@+id/positiveTitleEdit"
        android:id="@+id/negativeTitleEdit"
        android:layout_alignBaseline="@+id/negativeTitle"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="请输入正方队名"
        android:textAppearance="@android:style/TextAppearance.Material.Small"
        android:minEms="10"
        android:layout_alignBottom="@+id/positiveName"
        android:layout_alignStart="@+id/positiveTitleEdit"
        android:id="@+id/positiveNameEdit"
        android:layout_alignBaseline="@+id/positiveName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="请输入反方队名"
        android:textAppearance="@android:style/TextAppearance.Material.Small"
        android:minEms="10"
        android:layout_alignBottom="@+id/negativeName"
        android:layout_alignStart="@+id/positiveTitleEdit"
        android:id="@+id/negativeNameEdit"
        android:layout_alignBaseline="@+id/negativeName" />

    <Button
        android:text="进入赛制设置页面"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:id="@+id/button" />


</RelativeLayout>
