<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sunxinyang.betaclock.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:layout_centerHorizontal="true"
        android:text="请设置赛制"
        android:id="@+id/textView" />

    <TextView
        android:text="正方辩题"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:id="@+id/positiveTitle"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="正方队名"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/negativeTitle"
        android:layout_alignStart="@+id/negativeTitle"
        android:layout_marginTop="40dp"
        android:id="@+id/positiveName" />

    <TextView
        android:text="反方辩题"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:id="@+id/negativeTitle"
        android:layout_below="@+id/positiveTitle"
        android:layout_alignStart="@+id/positiveTitle" />

    <TextView
        android:text="反方队名"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/positiveName"
        android:layout_alignStart="@+id/positiveName"
        android:layout_marginTop="28dp"
        android:id="@+id/negativeName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:layout_alignBottom="@+id/positiveTitle"
        android:layout_toEndOf="@+id/positiveTitle"
        android:layout_marginStart="21dp"
        android:id="@+id/editText" />
</RelativeLayout>
